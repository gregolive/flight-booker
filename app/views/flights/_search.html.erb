<%= form_with url: "/flights", method: :get do |f| %>
  <div class="row">
    <div class="control">
      <%= f.label "Where from?", class: "label" %>
      <div class="select">
        <%= f.select(:departure_airport, Airport.city, include_blank: "Depart") %>
      </div>
    </div>

    <div class="control">
      <%= f.label "Where to?", class: "label" %>
      <div class="select">
        <%= f.select(:arrival_airport, Airport.city, include_blank: "Arrive") %>
      </div>
    </div>

    <div class="control">
      <%= f.label "Date", class: "label" %>
      <div class="select">
        <%= f.select(:departure_time, (Date.today.. 1.month.from_now), include_blank: "Select date") %>
      </div>
    </div>

    <div class="control">
      <%= f.label "Passengers", class: "label" %>
      <div class="select">
        <%= f.select(:passengers, (1..6)) %>
      </div>
    </div>
  </div>
  <br>
  <%= f.submit "Search", class: "button is-primary" %>
<% end %>